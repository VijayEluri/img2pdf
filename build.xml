<project name="img2pdf" default="compile" basedir=".">
  
  <description>
  a very simple build file for the img2pdf converter program.
  </description>
  
  <!-- program specific properties -->
  
  <property name="p.main" value="ImageToPdf"/>
  
  <path id="p.cp"> <!-- Run time classpath -->
    <fileset dir=".">
      <include name="**/*.jar"/>
    </fileset>
  </path>
  
  <!-- The tasks -->
  
  <target name="clean" description="clean up the output directory">
    <delete>
      <fileset dir="." includes="**/*.class"/>
      <fileset file="img2pdf.jar"/>
    </delete>
  </target>
  
  <target name="compile" depends="clean" description="compile the source">
    <javac srcdir="." destdir="." encoding="UTF-8" includeAntRuntime="false">
      <classpath refid="p.cp"/>
    </javac>
  </target>
  
</project>